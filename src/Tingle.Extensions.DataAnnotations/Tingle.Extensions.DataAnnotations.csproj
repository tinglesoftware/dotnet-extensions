    <NoWarn>$(NoWarn);CA1813</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <PackageTags>$(PackageTags);Validation;DataAnnotations</PackageTags>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.1'">
