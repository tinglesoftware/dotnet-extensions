<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Basic mustache cache implementation in .NET.
This project is built on the good work offered in Wildbit's implementation at https://github.com/ActiveCampaign/mustachio
For more information on the spec, refer to https://mustache.github.io/
    </Description>
    <TargetFrameworks>net7.0;net8.0</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <PackageTags>$(PackageTags);mustache;mustachio;templates</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Tingle.Extensions.Mustache.Tests" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Hosting.Abstractions" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="8.0.2" />
  </ItemGroup>

</Project>
